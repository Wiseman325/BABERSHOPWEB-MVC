@model List<ProductType>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">
                    <h2 class="text-primary">Product Category List</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="ProductType" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Category
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Description</th>
                        <th>Display Order</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOder))
                    {
                        <tr>
                            <td>@obj.ProductType_Name</td>
                            <td>@obj.ProductType_Description</td>
                            <td>@obj.DisplayOder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="ProductType" asp-action="Edit" asp-route-ProductTypeId="@obj.ProductTypeId" class="btn btn-primary mx-2 d-flex align-items-center">
                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                    </a>
                                    <a asp-controller="ProductType" asp-action="Delete" asp-route-ProductTypeId="@obj.ProductTypeId" class="btn btn-danger mx-2 d-flex align-items-center">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
