@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">
                    <h2 class="text-primary">Delete Category</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form class="row" method="post">
            <input asp-for="ProductId" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2">Product Name</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">Description</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2">ListPrice</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2">Price</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price5" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price5" class="ms-2">Price of 5+</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quantity" disabled class="form-control border-0 shadow" />
                    <label asp-for="Quantity" class="ms-2">Quantity</label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">
                            Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
